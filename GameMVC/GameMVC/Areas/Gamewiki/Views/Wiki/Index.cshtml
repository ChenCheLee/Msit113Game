    ViewBag.Title = "Index";
}
@section styles{
<link href="~/Content/GameWikiView.css" rel="stylesheet" />
    <style>
        img{cursor:pointer}
    </style>
}
<nav class="navbar navbar-default" style="z-index:1">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul id="navBar" class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">選項 <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
