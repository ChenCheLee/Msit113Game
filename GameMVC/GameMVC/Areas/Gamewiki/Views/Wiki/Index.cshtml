</nav>
<div id="gamePicture" class="container">
    <div class="row">
        <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
        </div>
        <div id="gameType" align="center">
            <button class="btn btn-default filter-button active" data-filter="all">全部顯示</button>
            <button class="btn btn-default filter-button" data-filter="StrategyGame">策略遊戲</button>
            <button class="btn btn-default filter-button" data-filter="FamilyGame">家庭遊戲</button>
            <button class="btn btn-default filter-button" data-filter="WarGame">戰爭遊戲</button>
            <button class="btn btn-default filter-button" data-filter="ChildGame">兒童遊戲</button>
            <button class="btn btn-default filter-button" data-filter="PartyGame">派對遊戲</button>
            <button class="btn btn-default filter-button" data-filter="ThematicGame">主題遊戲</button>
            <button class="btn btn-default filter-button" data-filter="CustomizableGame">客製遊戲</button>
        </div>
        <br />
        <div>
            <p class="text-center">這邊放頁數</p>
        </div>
        <br />
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter StrategyGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
                <p>遊戲排名、遊戲名字</p>
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter StrategyGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
                <p>遊戲排名、遊戲名字</p>
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter FamilyGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
                <p>遊戲排名、遊戲名字</p>
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter FamilyGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter FamilyGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter WarGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter ChildGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter PartyGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter PartyGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter ThematicGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter ThematicGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter CustomizableGame">
                <img src="http://fakeimg.pl/365x365/" class="img-responsive">
            </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/GameWikiView.js"></script>
    <script>
        $('#navBar>li').click(function () {
            $('li').removeClass('active');
            $(this).addClass('active');
        })
        $('#gameType>button').click(function () {
            $('#gameType>button').removeClass().addClass('btn btn-default filter-button');
            $(this).addClass('btn btn-default filter-button active');
        })
        $('#gamePicture img').click(function () {
            window.location.href = '@Url.Action("GameView","Wiki",new { area = "Gamewiki" })'
        })
        //$('#gameDetail').click(function () {
            
        //})
    </script>

}
